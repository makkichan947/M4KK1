// M4KK1 MLang示例程序
// Hello World程序展示MLang语法

import std.io;

func main() -> int {
    var message: string = "Hello, M4KK1 World!";
    var counter: int = 0;

    while counter < 5 {
        println(message);
        counter = counter + 1;
    }

    return 0;
}

func fibonacci(n: int) -> int {
    if n <= 1 {
        return n;
    } else {
        return fibonacci(n - 1) + fibonacci(n - 2);
    }
}

func demonstrate_features() -> void {
    var numbers: [10]int;
    var i: int = 0;

    // 数组初始化
    while i < 10 {
        numbers[i] = fibonacci(i);
        i = i + 1;
    }

    // 输出斐波那契数列
    println("Fibonacci sequence:");
    i = 0;
    while i < 10 {
        print("F(");
        print(i);
        print(") = ");
        println(numbers[i]);
        i = i + 1;
    }

    // 字符串操作演示
    var greeting: string = "Welcome to MLang!";
    println(greeting);

    // 类型推导演示
    var auto_number = 42;  // 自动推导为int
    var auto_string = "auto";  // 自动推导为string

    println(auto_number);
    println(auto_string);
}